@model BwareAdmin.Models.RoleViewModel

<h3>Are you sure you want to delete this?</h3>

<div class="col-md-12" style="border-radius: 10px; margin-top: 5px">
    <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">

        <h4 style="font-family:'Comic Sans MS'; font-size:large"> Role Named: @ViewBag.RoleName</h4>
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.CurrentName)

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> 
            </div>
        }
    </div>
</div>

@Html.ActionLink("Back to List", "Index")


