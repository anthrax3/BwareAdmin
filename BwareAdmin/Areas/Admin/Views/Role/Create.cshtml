@model BwareAdmin.Models.RoleViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Create Role.</h4>
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-12" style="border-radius: 10px; margin-top: 5px">
            <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">
                <div class="form-group">
                   <div class="col-md-10"> 
                        <h3 style="font-family:'Comic Sans MS'; font-size:large"> New Role Name </h3>
                        @Html.EditorFor(model => model.NewName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewName, "", new { @class = "text-danger" })
                   </div> 
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
