@{
    ViewBag.Title = "B*ware iOS app";
}

@section featured {
    <section>
        <div class="col-md-12" style="border-radius: 10px; margin-top: 30px">

            <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">
                <div style="padding-top: 20px; margin-top: 20px; padding-bottom:20px; white; text-align: center">
                    <h1>@ViewBag.Title.</h1>
                    <h3>
                        Features posted bridge information for over 10,000 bridges with relevant height and weight information.
                    </h3>
                    <h5>
                        <a href="https://itunes.apple.com/us/app/b*ware/id1039988525?ls=1&mt=8">
                            <img style="width: 100px; height: 100px; padding: 15px" src='~/Images/bware_icon.png' />
                        </a>
                        Bridge markers are conveniently displayed on a map based on your current location or your specified search criteria.
                    </h5>
                </div>
            </div>

        </div>

    </section>

    <!-- Only show these links for admin -->
    @if (HttpContext.Current.User.Identity.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin"))
    {
        <div class="col-md-12" style="border-radius: 10px; margin-top: 40px">
            <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">
                <div class="row" style="margin-top: 40px">
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="~/Images/users.jpg" style="width: 150px; height: 150px; margin-top: 20px" alt="...">
                            <div class="caption">
                                <h3 style="text-align: center">Manage Users </h3>
                                <div style="text-align: center"><a href='@Url.Action("Index", "User", new { area = "Admin" })' class="btn btn-danger"> User info </a></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="~/Images/bridge_construction.jpg" style="width: 150px; height: 150px; margin-top: 20px" />
                            <div class="caption">
                                <h3 style="text-align: center">Manage Bridges </h3>
                                <div style="text-align: center"><a href='@Url.Action("Nearby", "Restricted")' class="btn btn-danger"> Bridge Info </a></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="~/Images/roles.jpg" style="width: 150px; height: 150px; margin-top: 20px" />
                            <div class="caption">
                                <h3 style="text-align: center"> Manage Roles </h3>
                                <div style="text-align: center"><a href='@Url.Action("Index", "Role", new { area = "Admin" })' class="btn btn-danger"> Role Info </a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col-md-12" style="border-radius: 10px; margin-top: 40px">
        <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">
            <div class="row" style="margin-top: 40px">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="~/Images/bridge_posted_weight.jpg" style="width: 150px; height: 150px; margin-top: 20px" alt="...">
                        <div class="caption">
                            <h3 style="text-align: center">Bridges by City </h3>
                            <h5 style="text-align: center">Using Truck Information</h5>
                            <div style="text-align: center"><a href='@Url.Action("Index", "Restricted")' class="btn btn-primary">Go</a></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="~/Images/bridge_low_clearance.jpg" style="width: 150px; height: 150px; margin-top: 20px" />
                        <div class="caption">
                            <h3 style="text-align: center">Bridges Nearby</h3>
                            <h5 style="text-align: center">Locate All Bridges Close By</h5>
                            <div style="text-align: center"><a href='@Url.Action("Nearby", "Restricted")' class="btn btn-primary">Find</a></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="~/Images/HuronRiverBridge.jpg" style="width: 150px; height: 150px; margin-top: 20px" />
                        <div class="caption">
                            <h3 style="text-align: center">Add Bridge</h3>
                            <h5 style="text-align: center">Enter Bridge Information</h5>
                            <div style="text-align: center"><a href='@Url.Action("Create", "Restricted")' class="btn btn-primary">Submit</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="col-md-12" style="margin-top: 40px">
        <div class="content-wrapper well" style="border-radius: 10px; margin-right: 10px">
            <h3>Getting Started:</h3>
            <ol class="round">
                <li class="one">
                    <h5>
                        <a href="https://itunes.apple.com/us/app/b*ware/id1039988525?ls=1&mt=8">  Download the iOS app... </a>
                    </h5>
                </li>
                <li>
                    <h5>
                        Create a new (free) user account in order to access the bridge database and begin using the app.
                    </h5>
                </li>
            </ol>
        </div>
    </div>

}
